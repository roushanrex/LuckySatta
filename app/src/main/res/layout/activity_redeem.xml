<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gifts"
    tools:context=".Redeem">

    <TextView

        android:layout_width="309dp"
        android:layout_height="299dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/rbtn" />

    <TextView
        android:id="@+id/redeemtxt"
        android:layout_width="156dp"
        android:layout_height="117dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="139dp"

        android:layout_marginEnd="98dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="60dp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/edtpaytm"
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="73dp"
        android:layout_marginBottom="213dp"
        android:hint="Paytm Number"
        android:inputType="number"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/edtpaytm4"
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="76dp"
        android:layout_marginBottom="160dp"
        android:hint="Mobile Number"
        android:inputType="number"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnpayment"
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edtpaytm"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-9dp"
        android:layout_marginBottom="115dp"
        android:text="SEND" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/redeemtxt"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="-28dp"
        android:text="Points"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="275dp"
        android:layout_height="38dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="-231dp"
        android:layout_marginBottom="506dp"
        android:text="Minimum Redeem 200 Rs."
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="normal" />

</RelativeLayout>